<application>
<name>followMe App</name>
    <module>
        <name>dialogueManager1</name>
        <node>localhost</node>
    </module>

    <module>
        <name>launchManipulation</name>
        <parameters>--from launchManipulation-fakeArms.ini</parameters>
        <node>/manipulation</node>
    </module>
    <module>
        <name>executionCore1</name>
        <node>/manipulation</node>
    </module>
    <connection>
        <from>/dialogueManager1/command:o</from>
        <to>/executionCore1/dialogueManager/command:i</to>
    </connection>

    <module>
        <name>yarpdev</name>
        <parameters>--device OpenNI2DeviceServer --noMirror --depthVideoMode 4 --colorVideoMode 9</parameters>
        <node>/head</node>
    </module>
    <module>
        <name>cvFaces</name>
        <parameters>--kinectDevice OpenNI2DeviceClient --kinectLocal /cvFaces</parameters>
        <node>/head</node>
    </module>
    <connection>
        <from>/cvFaces/state:o</from>
        <to>/executionCore1/cv/state:i</to>
    </connection>

    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/cvFaces/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/cvFaces/img:o</from>
        <to>/yarpview/cvFaces/img:i</to>
    </connection>

    <module>
        <name>/sbin/runuser</name>
        <parameters>-l teo -c speechRecognition1.py</parameters>
        <node>/head</node>
    </module>
    <connection>
        <from>/speechRecognition1:o</from>
        <to>/dialogueManager1/speechRecognition:i</to>
    </connection>

    <module>
        <name>/sbin/runuser</name>
        <parameters>-l teo -c iSpeak</parameters>
        <node>/head</node>
    </module>
    <connection>
        <from>/dialogueManager1/iSpeak:o</from>
        <to>/iSpeak</to>
    </connection>

</application>


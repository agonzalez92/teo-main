<application>
<name>teoTools App</name>
    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/OpenNI2/imageFrame:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/OpenNI2/imageFrame:o</from>
        <to>/yarpview/OpenNI2/imageFrame:i</to>
    </connection>

    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/OpenNI2/depthFrame:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/OpenNI2/depthFrame:o</from>
        <to>/yarpview/OpenNI2/depthFrame:i</to>
    </connection>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /tts/rpc:s"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp read ... /speechRecognition:o"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /speechRecognition/rpc:s"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpscope</name>
        <parameters>--remote /jr3/ch0:o --index "(0 1 2 3 4 5)" --color "(Red Green Blue LightRed LightGreen LightBlue)" --min -1000 --max 1000</parameters>
        <prefix>/jr3/ch0:o</prefix>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpscope</name>
        <parameters>--remote /jr3/ch1:o --index "(0 1 2 3 4 5)" --color "(Red Green Blue LightRed LightGreen LightBlue)" --min -1000 --max 1000</parameters>
        <prefix>/jr3/ch1:o</prefix>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpscope</name>
        <parameters>--remote /jr3/ch2:o --index "(0 1 2 3 4 5)" --color "(Red Green Blue LightRed LightGreen LightBlue)" --min -1000 --max 1000</parameters>
        <prefix>/jr3/ch2:o</prefix>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpscope</name>
        <parameters>--remote /jr3/ch3:o --index "(0 1 2 3 4 5)" --color "(Red Green Blue LightRed LightGreen LightBlue)" --min -1000 --max 1000</parameters>
        <prefix>/jr3/ch3:o</prefix>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpmotorgui</name>
        <parameters>--from config/yarpmotorgui.ini</parameters>
    </module>

</application>


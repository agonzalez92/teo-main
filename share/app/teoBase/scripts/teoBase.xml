<application>
<name>teoBase App</name>

<!-- manipulation -->

    <module>
        <name>launchManipulation</name>
        <parameters>--from /home/teo/repos/teo-body/build/share/teo-body/contexts/launchManipulation/launchManipulation_wo119.ini</parameters>
        <node>/manipulation</node>
    </module>

    <module>
        <name>jr3pci4channelYarp</name>
        <parameters></parameters>
        <node>/manipulation</node>
    </module>

<!-- locomotion -->

    <module>
        <name>launchLocomotion</name>
        <parameters>--from /home/teo/repos/teo-body/share/launchLocomotion/conf/launchLocomotion_without_113_114.ini</parameters>
        <node>/locomotion</node>
    </module>

    <module>
        <name>yarpdev</name>
        <parameters>--subdevice xsensmtx --device inertial --name /inertial</parameters>
        <node>/locomotion</node>
    </module>

<!-- head -->

    <module>
        <name>yarpdev</name>
        <parameters>--device OpenNI2DeviceServer --depthVideoMode 4 --colorVideoMode 9 --noRGBMirror --noDepthMirror</parameters>
        <node>/head</node>
    </module>

    <module>
        <name>/sbin/runuser</name>
        <parameters>-l teo -c speechRecognition.py</parameters>
        <node>/head</node>
    </module>

    <module>
        <name>/sbin/runuser</name>
        <parameters>-l teo -c "yarp read /tts-en:i |  espeak -s 160 -v mb-en1"</parameters>
        <node>/head</node>
    </module>

    <module>
        <name>/sbin/runuser</name>
        <parameters>-l teo -c "yarp read /tts-es:i |  espeak -s 160 -v mb-es1"</parameters>
        <node>/head</node>
    </module>

</application>


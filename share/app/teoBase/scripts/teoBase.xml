<application>
<name>teoBase App</name>

<!-- manipulation -->

    <module>
        <name>launchManipulation</name>
        <parameters></parameters>
        <node>/manipulation</node>
    </module>

<!-- locomotion -->

    <module>
        <name>launchLocomotion</name>
        <parameters></parameters>
        <node>/locomotion</node>
    </module>

    <module>
        <name>yarpdev</name>
        <parameters>--subdevice xsensmtx --device inertial --name /inertial</parameters>
        <node>/locomotion</node>
    </module>

<!-- head -->

    <module>
        <name>yarpdev</name>
        <parameters>--device OpenNI2DeviceServer --depthVideoMode 4 --colorVideoMode 9</parameters>
        <node>/head</node>
    </module>

    <module>
        <name>/sbin/runuser</name>
        <parameters>-l teo -c speechRecognition1.py</parameters>
        <node>/head</node>
    </module>

    <module>
        <name>/sbin/runuser</name>
        <parameters>-l teo -c iSpeak</parameters>
        <node>/head</node>
    </module>

</application>

